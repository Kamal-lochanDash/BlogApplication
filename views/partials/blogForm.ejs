<form action="/blogs/add" method="POST" enctype="multipart/form-data" class="modern-form-container">
  <h2 class="modern-form-title">Add a New Blog</h2>

  <!-- Blog Title -->
  <div class="modern-form-group">
    <input
      type="text"
      id="title"
      name="title"
      placeholder="Blog Title"
      class="modern-input"
      required />
  </div>

  <!-- Blog Content -->
  <div class="modern-form-group">
    <textarea
      id="content"
      name="content"
      placeholder="Write your blog content here..."
      rows="6"
      class="modern-input"
      required></textarea>
  </div>

  <!-- Category -->
  <div class="modern-form-group">
    <select id="category" name="category" class="modern-input">
      <option value="Technology">Technology</option>
      <option value="Lifestyle">Lifestyle</option>
      <option value="Health">Health</option>
      <option value="Travel">Travel</option>
      <option value="Education">Education</option>
    </select>
  </div>

  <!-- Image Upload -->
  <div class="modern-form-group">
    <input type="file" id="image" name="image" class="modern-input" />
  </div>

  <!-- Submit Button -->
  <div class="modern-form-group">
    <button type="submit" class="modern-submit-button">Publish Blog</button>
  </div>
</form>
