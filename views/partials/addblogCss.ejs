<style>

/* General Body Styles */
body {
  font-family: Arial, sans-serif;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

/* Form Container */
.modern-form-container {
  background: #ffffff;
  padding: 30px 40px;
  border-radius: 12px;
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  max-width: 600px;
  width: 100%;
  text-align: center;
  animation: fadeIn 0.8s ease-in-out;
}

/* Form Title */
.modern-form-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333333;
}

/* Form Group */
.modern-form-group {
  margin-bottom: 20px;
  position: relative;
}

/* Input Fields */
.modern-input {
  width: 100%;
  padding: 12px 15px;
  font-size: 14px;
  border: 1px solid #ddd;
  border-radius: 6px;
  background-color: #f7f7f7;
  outline: none;
  transition: all 0.3s ease-in-out;
}

.modern-input:focus {
  border-color: #6e8efb;
  box-shadow: 0 4px 8px rgba(110, 142, 251, 0.2);
}

/* Submit Button */
.modern-submit-button {
  background: #6e8efb;
  color: #fff;
  padding: 12px 20px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 16px;
  font-weight: bold;
  transition: background 0.3s ease-in-out, transform 0.2s;
}

.modern-submit-button:hover {
  background: #4f76e3;
  transform: translateY(-2px);
}

/* Animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}




</style>